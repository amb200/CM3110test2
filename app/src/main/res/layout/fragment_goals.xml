<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Goals">


    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButtonGainWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gain Weight" />

        <RadioButton
            android:id="@+id/radioButtonLoseWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose Weight" />

        <RadioButton
            android:id="@+id/radioButtonMaintainWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maintain" />
    </RadioGroup>

    <Button
        android:id="@+id/goalsSubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="@+id/radioGroup2"
        app:layout_constraintStart_toStartOf="@+id/radioGroup2"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2" />

</androidx.constraintlayout.widget.ConstraintLayout>